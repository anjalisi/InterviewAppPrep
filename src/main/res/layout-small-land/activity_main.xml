<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roboa"
    android:id="@+id/frontpagelayout"
    >

    <Button
        android:id="@+id/bsq"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/button_states"
        android:text="@string/sq"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <Button

        android:id="@+id/btq"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/bsq"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_states"
        android:text="@string/tq"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <Button

        android:id="@+id/boap"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/btq"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="91dp"
        android:background="@drawable/button_states"
        android:text="@string/bap"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <Button

        android:id="@+id/brp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@id/boap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_states"
        android:text="@string/rq"
        android:textColor="#ffffff"
        android:textSize="8sp" />

</RelativeLayout>
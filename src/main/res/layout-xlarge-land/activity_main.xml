<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roboa"
    android:id="@+id/frontpagelayout"
    >

    <Button
        android:id="@+id/bsq"
        android:layout_width="1200dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_states"
        android:text="@string/sq"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button

        android:id="@+id/btq"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/bsq"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/button_states"
        android:text="@string/tq"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button

        android:background="@drawable/button_states"
        android:textColor="#ffffff"
        android:id="@+id/boap"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_below="@id/btq"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="100dp"
        android:text="@string/bap" />

    <Button

        android:background="@drawable/button_states"
        android:textColor="#ffffff"
        android:id="@+id/brp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:layout_below="@id/boap"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="100dp"
        android:text="@string/rq" />

</RelativeLayout>